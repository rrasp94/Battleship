<div class="row mt-3">
    <div class="col text-center">
        <div class="d-flex justify-content-center gap-3">
            <button class="btn btn-primary btn-lg" @onclick="OnBack">
                Back to Menu
            </button>
            <button class="btn btn-success btn-lg" @onclick="OnRestart">
                Restart Game
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter] public EventCallback OnBack { get; set; }
    [Parameter] public EventCallback OnRestart { get; set; }
}
